<%= form_with model: @flight, method: :get, local: true do |form| %>
  <% @airports = Airport.all.map { |airport| [airport.name, airport.id] } %>
  <% @date = Flight.first.departure_date %>

  <div class="from_airport">
    <%= select_tag(:origin_id, options_for_select(@airports, selected: params[:origin_id]), {prompt: 'From?'}) %>
  </div>

  <div class="to_airport">
    <%= select_tag(:destination_id, options_for_select(@airports, selected: params[:destination_id]), {prompt: 'To?'}) %>
  </div>

  <div class="passengers">
      <%= select_tag(:pass_count, options_for_select(1..4, selected: params[:passenger]),{prompt: 'Passengers'}) %>
  </div>
    
  <div class="date">
      <%= select_tag(:departure_date, options_for_select(@date.each { |date| date }, selected: params[:departure_date]), {prompt: "date?"})%>
  </div>

  <div>
      <%= submit_tag("Show flights", class: "button is-info") %>
  </div>
<% end %>
